{
  "$schema": "https://turborepo.com/schema.json",
  "daemon": true,
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "generated/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@studysync/server#build": {
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV",
        "PORT",
        "HOST",
        "JET_LOGGER_MODE",
        "JET_LOGGER_FILEPATH",
        "JET_LOGGER_TIMESTAMP",
        "JET_LOGGER_FORMAT",
        "DISABLE_HELMET"
      ]
    }
  },
  "globalEnv": ["GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET", "DATABASE_URL"]
}
